body
	font-size 62.5%
	background $white
	
	h1
		headerFont(400,2.4rem)
	
	h2
		headerFont(400,1.6rem)
	
	p
		copyFont(400)
	
	&.template-index
		padding-top 80px
	
	#CartDrawer
		z-index 100 !important
	
	.yali_header
		display flex
		z-index 100
		position fixed
		top 0
		left 0
		width 100%
		height 80px
		padding 5px 10px
		box-sizing border-box
		background #fff
		white-space nowrap
		transition .2s all ease-in-out
		
		&.minimized
			height 60px
			padding 10px
			background rgba(255,255,255,.98)
			-webkit-box-shadow: 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
			box-shadow: 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
			
		
		&__element						
			&--nav
				flex auto
				position relative
				height 100%
				
				ul
					position absolute
					top 50%
					-webkit-transform translateY(-50%)
					-moz-transform translateY(-50%)
					-o-transform translateY(-50%)
					transform translateY(-50%)
					list-style none
					padding 0
					margin 0
					
					li
						display inline-block
						margin 0 10px
						
						a
							interactiveCopy(700, $black, 10pt)
							
							&:hover
								color $red
						
				&:first-of-type
					text-align left
					
					ul
						left 10px
				
				&:last-of-type
					text-align right
					
					ul
						right 10px
			
			&--logo
				flex auto
				text-align center
				transition .2s all ease-in-out
				
				img
					width auto
					height 100%
	
	.cart-link__bubble--visible
		background-color $red !important
		
	.yali_footer
		padding $verticalMarginsShort
		background #fff
		border-bottom 20px solid $red
		
		&__newsletter
			background none !important
			width 90%
			max-width 500px
			margin 0 auto $verticalMarginsShort
			
			.section-header
				margin-bottom 0
				
				h2
					headerFont(400,1.6rem)
			
			.section-subheading
				width 400px
				margin auto
			
			hr.hr--small
				display none
			
			form
				border-bottom 1px solid $black
				
				input
					background none !important
					border 0 !important
					
					&#Email
						copyFont(400)
						font-style normal
						
						&:focus
							outline none
				
				button
					&#Subscribe
						background none !important
						interactiveCopy(700, $red, 10pt)
		
		&__menu,
		&__social
			list-style none
			text-align center
			margin-bottom 10px
			
			li
				display inline-block
				margin 0 10px
				
				a
					interactiveCopy(700, $black, 10pt)
		
		&__copyright
			copyFont(400)
			margin-top 50px
			text-align center