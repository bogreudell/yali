body
	&.template-article
		.main-content
			padding-bottom 0
			
		.section-header
			max-width 550px
			margin auto
			padding-top 0
			
			p
				margin-bottom 0
				
				.date
					margin-bottom 0
		
		.yali_article
			&__content
				width 98%
				max-width 600px
				margin 0 auto
				
				div,
				p,
				em
					font-family garvis-pro, serif
					font-weight 400
					font-size 1rem
					line-height 1.5rem
					margin 30px 0
				
				img
					max-width 100% !important
					height auto
					margin auto !important
		
		.social-sharing
			text-align center
			
			a
				background #de0026
				font-family brother-1816, sans-serif
				font-weight 700
				text-transform uppercase
				color #f1f0f5
				font-size 10pt

@media all and (max-width:768px)
	body
		&.template-article
			.section-header
				padding-top 47px