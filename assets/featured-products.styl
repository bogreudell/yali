.yali_featured-products
	&__shop-all
		shopButton()
		
		&:hover
			color $white
			background $red

	&__carousel
		padding-left 0
		white-space nowrap
		overflow-x scroll
		
		ul
			margin 0
			padding 0
		
		button
			display none
	
	&__product
		list-style none
		display inline-block
		width 25%
		
		.yali_height-padding
			padding-bottom 166%