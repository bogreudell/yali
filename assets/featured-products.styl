.yali_featured-products
	&__shop-all
		shopButton()
		
		&:hover
			color $white
			background $red

	&__carousel
		position relative
		padding-left 0
		white-space nowrap
		
		ul
			width 100%
			margin 0
			padding 0
			overflow-x hidden
			
			li
				margin-bottom 0
		
		button
			display none
			position absolute
			top 50%
			-webkit-transform translateY(-50%) rotate(-45deg)
			-moz-transform translateY(-50%) rotate(-45deg)
			-o-transform translateY(-50%) rotate(-45deg)
			transform translateY(-50%) rotate(-45deg)
			transition opacity .2s ease-in-out
			
			&#yali_featured-products__scroll
				&--right
					width 40px
					height 40px
					right 30px
					border-right 5px solid #fff
					border-bottom 5px solid #fff
				
				&--left
					width 40px
					height 40px
					left 30px
					border-left 5px solid #fff
					border-top 5px solid #fff
			
			&.hidden
				opacity 0
			
			&:focus
				outline none
	
	&__product
		list-style none
		display inline-block
		width 25%
		
		.yali_height-padding
			padding-bottom 166%