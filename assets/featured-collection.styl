.yali_featured-collection
	height 75vh
	
	&__banner
		position relative
		width 100%
		height 100%
		background rgba(0,0,0,.25)
	
	&__title
		position absolute 
		top 50%
		left 50%
		transform translate(-50%, -50%)
		text-align center
				
		h1
			color $white
			margin-bottom 0
		
		h2
			color $white
			font-style italic